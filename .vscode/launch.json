{
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/main/jukebox_receiver.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/main/jukebox_receiver.exe.runfiles/",
            "environment": [],
            "internalConsoleOptions": "openOnSessionStart",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Jukebox Receiver (Debug)",
            "windows": {
                "type": "cppvsdbg",
                "cwd": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/main/jukebox_receiver.exe.runfiles/__main__/",
                "program": "${workspaceFolder}/bazel-out/x64_windows-dbg/bin/main/jukebox_receiver.exe",
            },
        },
    ]
}